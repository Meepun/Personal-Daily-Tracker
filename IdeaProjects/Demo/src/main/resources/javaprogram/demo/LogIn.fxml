<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="520.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javaprogram.demo.LogInController">
   <children>
      <AnchorPane prefHeight="400.0" prefWidth="200.0" style="-fx-background-color: #ffe193;">
         <children>
            <ImageView fitHeight="168.0" fitWidth="178.0" layoutX="11.0" layoutY="69.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../../../../../images/Hi Logo.png" />
               </image>
            </ImageView>
            <Label layoutX="46.0" layoutY="262.0" text="LOG-IN" textFill="#f88d00">
               <font>
                  <Font name="Gill Sans Ultra Bold" size="26.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
      <AnchorPane layoutX="200.0" prefHeight="176.0" prefWidth="323.0">
         <children>
            <AnchorPane layoutX="-1.0" layoutY="264.0" prefHeight="136.0" prefWidth="323.0">
               <children>
                  <ImageView fitHeight="56.0" fitWidth="59.0" layoutX="143.0" layoutY="68.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../../../../../images/Untitled design.png" />
                     </image>
                     <effect>
                        <Bloom>
                           <input>
                              <Lighting>
                                 <light>
                                    <Light.Distant />
                                 </light>
                                 <bumpInput>
                                    <BoxBlur />
                                 </bumpInput>
                              </Lighting>
                           </input>
                        </Bloom>
                     </effect>
                  </ImageView>
                  <Label layoutX="177.0" layoutY="96.0" prefHeight="16.0" prefWidth="138.0" text="Protected by iGuard" textFill="#0d3883">
                     <font>
                        <Font name="Magneto Bold" size="12.0" />
                     </font>
                  </Label>
               </children>
            </AnchorPane>
            <Label layoutX="48.0" layoutY="43.0" prefWidth="34.0" text="Email:">
               <font>
                  <Font name="Berlin Sans FB Demi Bold" size="12.0" />
               </font>
            </Label>
            <TextField fx:id="emailTextField" layoutX="48.0" layoutY="64.0" prefHeight="25.0" prefWidth="226.0" promptText="Type your email here..." />
            <Label layoutX="47.0" layoutY="113.0" text="Password:">
               <font>
                  <Font name="Berlin Sans FB Demi Bold" size="12.0" />
               </font>
            </Label>
            <TextField fx:id="passTextField" layoutX="48.0" layoutY="134.0" prefHeight="25.0" prefWidth="226.0" promptText="Please enter your password..." />
            <Button fx:id="loginButton" layoutX="49.0" layoutY="188.0" mnemonicParsing="false" onAction="#handleLoginButton" prefHeight="25.0" prefWidth="226.0" style="-fx-background-color: #fbaa18;" text="Log in">
               <font>
                  <Font name="Berlin Sans FB Demi Bold" size="12.0" />
               </font>
            </Button>
            <Button fx:id="mainmenuButton" layoutX="191.0" layoutY="252.0" mnemonicParsing="false" onAction="#handleMainMenuButton" prefHeight="25.0" prefWidth="83.0" style="-fx-background-color: #ffc725;" text="Return" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="Berlin Sans FB Demi Bold" size="12.0" />
               </font>
            </Button>
         </children></AnchorPane>

   </children>
</AnchorPane>
