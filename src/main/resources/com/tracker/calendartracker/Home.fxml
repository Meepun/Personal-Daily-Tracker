<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import java.lang.String?>
<BorderPane prefHeight="502.0" prefWidth="660.0" stylesheets="@../../../styles/home.css" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tracker.calendartracker.HomeController">

    <!-- Right Panel (Month Navigation) -->
    <right>
        <VBox alignment="CENTER" prefHeight="451.0" prefWidth="105.0" spacing="10" styleClass="month-panel">
            <SplitPane fx:id="splitPane" dividerPositions="0.07" orientation="VERTICAL" prefHeight="518.0" prefWidth="85.0">
                <items>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="103.0" prefWidth="83.0">
                        <children>
                            <Button fx:id="createNewTrackerButton" alignment="CENTER" layoutX="-1.0" layoutY="-4.0" prefHeight="27.0" prefWidth="86.0" styleClass="top-nav-button" text="+" textAlignment="CENTER" onAction="#handleCreateNewTracker"/>
                        </children>
                    </AnchorPane>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="565.0" prefWidth="83.0">
                        <children>
                            <Label layoutX="12.0" layoutY="14.0" styleClass="calendar-header" text="Calendar" />
                            <ListView fx:id="monthListView" layoutX="-4.0" layoutY="43.0" prefHeight="357.0" prefWidth="96.0" styleClass="month-list" onMouseClicked="#handleMonthSelection">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="January"/>
                                        <String fx:value="February"/>
                                        <String fx:value="March"/>
                                        <String fx:value="April"/>
                                        <String fx:value="May"/>
                                        <String fx:value="June"/>
                                        <String fx:value="July"/>
                                        <String fx:value="August"/>
                                        <String fx:value="September"/>
                                        <String fx:value="October"/>
                                        <String fx:value="November"/>
                                        <String fx:value="December"/>
                                    </FXCollections>
                                </items>
                            </ListView>

                        </children>
                    </AnchorPane>
                </items>
            </SplitPane>
        </VBox>
    </right>

    <!-- Left Panel (Calendar Grid) -->
    <left>
        <HBox prefHeight="518.0" prefWidth="555.0" BorderPane.alignment="CENTER">
            <children>
                <TabPane fx:id="tabPane" prefHeight="517.0" prefWidth="555.0" stylesheets="@../../../styles/style.css" tabClosingPolicy="UNAVAILABLE">
                    <Tab text="Tracker 1">
                        <content>
                            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="425.0" prefWidth="516.0">
                                <children>
                                    <!-- Calendar Grid with Weekday Headers -->
                                    <GridPane fx:id="calendarGrid" alignment="CENTER" hgap="10" vgap="10" layoutX="3.0" layoutY="28.0" prefHeight="340.0" prefWidth="513.0" styleClass="calendar-grid">
                                        <!-- Weekday Headers (Add these manually in SceneBuilder) -->
                                        <Label text="Sun" style="-fx-font-weight: bold;" GridPane.columnIndex="0" />
                                        <Label text="Mon" style="-fx-font-weight: bold;" GridPane.columnIndex="1" />
                                        <Label text="Tue" style="-fx-font-weight: bold;" GridPane.columnIndex="2" />
                                        <Label text="Wed" style="-fx-font-weight: bold;" GridPane.columnIndex="3" />
                                        <Label text="Thu" style="-fx-font-weight: bold;" GridPane.columnIndex="4" />
                                        <Label text="Fri" style="-fx-font-weight: bold;" GridPane.columnIndex="5" />
                                        <Label text="Sat" style="-fx-font-weight: bold;" GridPane.columnIndex="6" />
                                    </GridPane>

                                    <!-- Month Label -->
                                    <Label fx:id="monthLabel" alignment="CENTER" layoutX="204.0" layoutY="-4.0" prefHeight="20.0" prefWidth="180.0" styleClass="month-label" text="January"/>


                                    <!-- Navigation Buttons -->
                                    <HBox alignment="CENTER" spacing="10" layoutY="350.0">
                                        <Button fx:id="previousMonthButton" text="previous" onAction="#handlePreviousMonth" />
                                        <Button fx:id="nextMonthButton" text="next" onAction="#handleNextMonth" />
                                    </HBox>
                                </children>
                            </AnchorPane>
                        </content>
                    </Tab>
                </TabPane>
            </children>
        </HBox>
    </left>

    <!-- Top Panel (Header) -->
    <top>
        <HBox prefHeight="57.0" prefWidth="660.0" style="-fx-background-color: #343434;" BorderPane.alignment="CENTER">
            <children>
                <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="57.0" prefWidth="180.0" text="Welcome, User" textAlignment="CENTER" textFill="#c37b1e">
                    <font>
                        <Font name="Berlin Sans FB Demi Bold" size="20.0" />
                    </font>
                </Label>
            </children>
        </HBox>
    </top>
</BorderPane>
