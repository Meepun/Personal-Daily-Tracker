<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="502.0" prefWidth="655.0" stylesheets="@../../../styles/home.css" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tracker.calendartracker.HomeController">
    <!-- Top Navigation Panel -->
    <top>
        <HBox alignment="CENTER" spacing="10" styleClass="top-nav">
            <Button fx:id="createNewTrackerButton" alignment="CENTER" prefWidth="148.0" styleClass="top-nav-button" text="Create New Tracker" textAlignment="CENTER" />
        </HBox>
    </top>

    <!-- Center Panel (Calendar) -->
    <center>
        <VBox alignment="TOP_CENTER" prefHeight="382.0" prefWidth="77.0" spacing="10" />
    </center>

    <!-- Right Panel (Month Navigation) -->
    <right>
        <VBox alignment="CENTER" prefHeight="446.0" prefWidth="105.0" spacing="10" styleClass="month-panel">
            <Label styleClass="calendar-header" text="Calendar" />
            <ListView fx:id="monthListView" prefHeight="400.0" prefWidth="224.0" styleClass="month-list">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="January" />
                        <String fx:value="February" />
                        <String fx:value="March" />
                        <String fx:value="April" />
                        <String fx:value="May" />
                        <String fx:value="June" />
                        <String fx:value="July" />
                        <String fx:value="August" />
                        <String fx:value="September" />
                        <String fx:value="October" />
                        <String fx:value="November" />
                        <String fx:value="December" />
                    </FXCollections>
                </items>
            </ListView>
        </VBox>
    </right>
   <left>
       <TabPane prefHeight="446.0" prefWidth="551.0" stylesheets="@../../../styles/style.css" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
           <Tab text="Tracker 1">
               <content>
                   <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="369.0" prefWidth="450.0">
                       <children>
                            <GridPane alignment="CENTER" hgap="10" layoutX="3.0" layoutY="28.0" prefHeight="134.0" prefWidth="513.0" styleClass="calendar-grid" vgap="10">
                                <!-- Days Header -->
                                <Label styleClass="calendar-header" text="Sun" GridPane.rowIndex="2" />
                                <Label styleClass="calendar-header" text="Mon" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                <Label styleClass="calendar-header" text="Tue" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                                <Label styleClass="calendar-header" text="Wed" GridPane.columnIndex="3" GridPane.rowIndex="2" />
                                <Label styleClass="calendar-header" text="Thu" GridPane.columnIndex="4" GridPane.rowIndex="2" />
                                <Label styleClass="calendar-header" text="Fri" GridPane.columnIndex="5" GridPane.rowIndex="2" />
                                <Label styleClass="calendar-header" text="Sat" GridPane.columnIndex="6" GridPane.rowIndex="2" />

                                <!-- Calendar Grid (placeholder for dates) -->
                                <Label styleClass="calendar-cell" text="1" GridPane.rowIndex="3" />
                                <Label styleClass="calendar-cell" text="2" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                <columnConstraints>
                                    <ColumnConstraints />
                                    <ColumnConstraints />
                                    <ColumnConstraints />
                                    <ColumnConstraints />
                                    <ColumnConstraints />
                                    <ColumnConstraints />
                                    <ColumnConstraints />
                                </columnConstraints>
                                <rowConstraints>
                                    <RowConstraints maxHeight="0.0" minHeight="0.0" prefHeight="0.0" />
                                    <RowConstraints maxHeight="0.0" minHeight="0.0" prefHeight="0.0" />
                                    <RowConstraints />
                                    <RowConstraints />
                                </rowConstraints>
                            </GridPane>
                           <VBox alignment="CENTER" layoutX="213.0" layoutY="-10.0" prefHeight="6.0" prefWidth="92.0" />
                             <Label fx:id="monthLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="204.0" layoutY="-4.0" prefHeight="20.0" prefWidth="109.0" styleClass="month-label" text="January" />
                       </children>
                   </AnchorPane>
               </content>
           </Tab>
       </TabPane>
   </left>
</BorderPane>
